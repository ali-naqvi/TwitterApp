<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.restclienttemplate.TweetActivity"
    android:background="#ffd6ebff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/etTweet"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffffff"
        android:hint="Tweet here"
        android:gravity="left|top"
        android:textSize="12sp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Tweet"
        android:id="@+id/btTweet"
        android:layout_below="@+id/etTweet"
        android:layout_alignRight="@+id/etTweet"
        android:layout_alignEnd="@+id/etTweet"
        android:background="#FF292f33"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCount"
        android:layout_alignTop="@+id/btTweet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffacacac"
        android:textSize="12sp" />
</RelativeLayout>
