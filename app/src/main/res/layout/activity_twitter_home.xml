    tools:context="com.codepath.apps.restclienttemplate.TwitterHomeActivity">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lvTweets"
        android:layout_alignParentBottom="true"
